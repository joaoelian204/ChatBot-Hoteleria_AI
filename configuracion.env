# ========================================
# CONFIGURACIÓN DEL CHATBOT DE HOTELERÍA
# ========================================
# Copia este archivo como .env y configura tus valores

# ========================================
# CONFIGURACIÓN DE TELEGRAM
# ========================================
# Token de tu bot de Telegram (obtener de @BotFather)
TELEGRAM_TOKEN=

# ========================================
# CONFIGURACIÓN DE LA EMPRESA
# ========================================
# Nombre de tu hotel o empresa
EMPRESA_NOMBRE=
# Descripción de tu hotel
EMPRESA_DESCRIPCION=

# ========================================
# CONFIGURACIÓN DE MODELOS DE IA
# ========================================
# Tamaño de chunks para procesamiento de texto
CHUNK_SIZE=
# Superposición entre chunks
CHUNK_OVERLAP=
# Temperatura para generación de respuestas (0.0-1.0)
TEMPERATURE=
# Longitud máxima de respuestas
MAX_LENGTH=

# ========================================
# MODELOS ESPECÍFICOS
# ========================================
# Modelo para resúmenes
MODELO_RESUMEN=
# Modelo para generación de respuestas
MODELO_GENERACION=
# Modelo para embeddings
MODELO_EMBEDDINGS=

# ========================================
# CONFIGURACIÓN DEL BOT
# ========================================
# Habilitar respuestas enriquecidas con emojis
ENABLE_RICH_RESPONSES=
# Habilitar formato con emojis
ENABLE_EMOJI_FORMATTING=

# ========================================
# CONFIGURACIÓN DE CACHE
# ========================================
# Duración del cache en horas
CACHE_DURATION_HOURS=
# Tamaño máximo del cache
MAX_CACHE_SIZE=
# Habilitar cache de modelos
ENABLE_MODEL_CACHING=

# ========================================
# CONFIGURACIÓN DE ANALÍTICAS
# ========================================
# Habilitar analíticas
ENABLE_ANALYTICS=
# Intervalo de guardado de analíticas
ANALYTICS_SAVE_INTERVAL=

# ========================================
# CONFIGURACIÓN DE LOGGING
# ========================================
# Nivel de logging (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=

# ========================================
# CONFIGURACIÓN DE RENDIMIENTO
# ========================================
# Carga perezosa de modelos
LAZY_LOAD_MODELS=
# Máximo de requests concurrentes
MAX_CONCURRENT_REQUESTS=

# ========================================
# NOTAS IMPORTANTES
# ========================================
# 1. Copia este archivo como .env en la raíz del proyecto
# 2. NUNCA subas tu archivo .env real al repositorio
# 3. Los valores por defecto están configurados para desarrollo
# 4. Ajusta los valores según tus necesidades específicas
